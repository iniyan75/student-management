<body style="background-image: url('https://wallpaperaccess.com/full/1384144.jpg');">
  <%- include("nav") -%>

    <div class="display-3"
      style=" color: white; text-align: center; margin-left: 300px; border: thin; margin-right: 300px; margin-top: 25PX;">
      <h3>ADD STUDENT</h3>
    </div>

    <div class="card" style="width: 30rem; margin-left: 550px; ">
      <form action="/register" method="post">


        <div class="card-body" style="background-color:silver; color:black;">
          <label class="form-label">Roll number</label>
          <input class="form-control" type="text" placeholder="Enter roll" name="rno" required>
          <label class="form-label">Name</label>
          <input class="form-control" type="text" placeholder="Enter name" name="name" required>
          <label class="form-label">City</label>
          <input class="form-control" type="text" placeholder="Enter Full City" name="city" required>
          <label class="form-label">DEPARTMENT</label>
          <input class="form-control" type="text" placeholder="Enter dept" name="dp" required>
          <label class="form-label">mobile number</label>
          <input class="form-control" type="text" placeholder="Enter mobile" name="number" required>
          <label placeholder="Counselling or management" class="form-label">Mode</label>
          <input class="form-control" type="text" name="mode">

          <label placeholder="Total Fees" class="form-label">total fees</label>
          <input class="form-control" type="text" name="tf">
          <label placeholder="CGPA" class="form-label">CGPA</label>
          <input class="form-control" type="text" name="cgpa">
          <label placeholder="Backlogs" class="form-label">Backlogs</label>
          <input class="form-control" type="text" name="bl">






          <button class=" btn btn-primary" style="margin-left: 200px;" type="submit">Add Student</button>

        </div>

      </form>
    </div>
</body>

</html>